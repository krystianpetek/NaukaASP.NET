@model MyFirstMVCApp.Models.FilmyGatunekModel;

@{
    ViewData["Title"] = "Index";
    ViewData["X"] = "Czeluść";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Filmy[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmy[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmy[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmy[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmy[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Filmy) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-route="@ViewData["X"]">Filtr</a>

<form asp-controller="Filmies" asp-action="Index" method="get">
    <p>

        <select asp-for="GatunekFilmu" asp-items="Model.Gatunki">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>